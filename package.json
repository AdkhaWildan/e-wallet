    "@tailwindcss/cli": "^4.1.13",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13"
  }
}
